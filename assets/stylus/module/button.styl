/*------------------------------------*\
    #BUTTON
\*------------------------------------*/
.button {
    transition: all .2s ease-in-out;
    background: $primaryColor;
    border: 0;
    color: #d9d1e0;
    height: 48px;
    text-transform: uppercase;
    font-size: 24px;
    letter-spacing: 1px;

    &:hover{
        animation: wiggle 0.2s ease-in-out;
        background: $primaryDark;
    }
}

@keyframes wiggle {
    25% {
        transform: rotate(5deg);
    }
    75% {
        transform: rotate(-5deg);
    }
}